    {
      "name": "Results & Analytics",
      "description": "Operations for retrieving survey results and analytics",
      "item": [
        {
          "name": "Get Survey Results",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Test successful response",
                  "pm.test('Results retrieved successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Test response structure",
                  "pm.test('Results have correct structure', function () {",
                  "    const responseJson = pm.response.json();",
                  "    ",
                  "    // Test main properties",
                  "    pm.expect(responseJson).to.have.property('totalCount');",
                  "    pm.expect(responseJson).to.have.property('age');",
                  "    pm.expect(responseJson).to.have.property('foodPercentages');",
                  "    pm.expect(responseJson).to.have.property('avgRatings');",
                  "    ",
                  "    // Test age object",
                  "    pm.expect(responseJson.age).to.have.property('avg');",
                  "    pm.expect(responseJson.age).to.have.property('min');",
                  "    pm.expect(responseJson.age).to.have.property('max');",
                  "    ",
                  "    // Test food percentages",
                  "    pm.expect(responseJson.foodPercentages).to.have.property('pizza');",
                  "    pm.expect(responseJson.foodPercentages).to.have.property('pasta');",
                  "    pm.expect(responseJson.foodPercentages).to.have.property('papAndWors');",
                  "    ",
                  "    // Test average ratings",
                  "    pm.expect(responseJson.avgRatings).to.have.property('movies');",
                  "    pm.expect(responseJson.avgRatings).to.have.property('radio');",
                  "    pm.expect(responseJson.avgRatings).to.have.property('eatOut');",
                  "    pm.expect(responseJson.avgRatings).to.have.property('tv');",
                  "});",
                  "",
                  "// Test data types",
                  "pm.test('Data types are correct', function () {",
                  "    const responseJson = pm.response.json();",
                  "    ",
                  "    pm.expect(responseJson.totalCount).to.be.a('number');",
                  "    pm.expect(responseJson.totalCount).to.be.at.least(0);",
                  "});",
                  "",
                  "// Test CORS headers",
                  "pm.test('CORS headers present', function () {",
                  "    pm.expect(pm.response.headers.get('Access-Control-Allow-Origin')).to.exist;",
                  "});",
                  "",
                  "// Test response time",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(3000);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
