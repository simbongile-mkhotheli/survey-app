              "raw": "{\n  \"firstName\": \"\",\n  \"lastName\": \"\",\n  \"email\": \"invalid-email\",\n  \"contactNumber\": \"123\",\n  \"dateOfBirth\": \"2030-01-01\",\n  \"foods\": [],\n  \"ratingMovies\": \"6\",\n  \"ratingRadio\": \"0\",\n  \"ratingEatOut\": \"invalid\",\n  \"ratingTV\": \"\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/survey",
              "host": ["{{base_url}}"],
