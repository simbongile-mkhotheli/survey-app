{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "..",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@/controllers/*": ["./controllers/*"],
      "@/services/*": ["./services/*"],
      "@/repositories/*": ["./repositories/*"],
      "@/interfaces/*": ["./interfaces/*"],
      "@/middleware/*": ["./middleware/*"],
      "@/config/*": ["./config/*"],
      "@/errors/*": ["./errors/*"],
      "@/validation/*": ["./validation/*"],
      "@/types/*": ["./types/*"],
      "@/routes/*": ["./routes/*"]
    }
  },
  "include": ["src/**/*.ts", "src/server.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
