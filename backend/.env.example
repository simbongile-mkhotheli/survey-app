
# Backend Environment Variables
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/survey_app?schema=public"

# CORS
# For development: local frontend URLs
# For production: Add your deployed frontend URL (e.g., Vercel URL)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,https://survey-app-beta-ivory.vercel.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security
JWT_SECRET=your_super_secret_jwt_key_here
BCRYPT_ROUNDS=12