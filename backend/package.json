{
  "name": "survey-backend",
  "version": "1.0.0",
  "description": "Express + Prisma backend for Survey App",
  "main": "dist/backend/src/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc && tsc-alias --project tsconfig.json",
    "start": "npm run build && node dist/backend/src/server.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/test/unit",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint \"src/**/*.{ts,js}\" --quiet",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "generate-client": "node scripts/generate-client.js",
    "docs": "echo 'API Documentation available at http://localhost:5000/api-docs when server is running'"
  },
  "keywords": [
    "survey",
    "express",
    "prisma",
    "typescript"
  ],
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@prisma/instrumentation": "^6.19.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-status-monitor": "^1.3.4",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.8.2",
    "node-cache": "^5.1.2",
    "openapi-types": "^12.1.3",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.12",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.17",
    "@types/express-status-monitor": "^1.3.3",
    "@types/hpp": "^0.2.7",
    "@types/node": "^22.15.29",
    "@types/node-cache": "^4.2.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^11.0.0",
    "@types/winston": "^2.4.4",
    "typescript": "^5.8.3",
    "tsc-alias": "^1.8.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@testcontainers/postgresql": "^11.8.0",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.5.0",
    "prisma": "^6.9.0",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "vitest": "^1.4.7"
  }
}
