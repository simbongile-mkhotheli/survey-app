# Production Environment Variables Template
# Copy this to .env.production and fill in the actual values

# Application Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://survey_user:CHANGE_THIS_PASSWORD@localhost:5432/survey_production_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=survey_production_db
DB_USER=survey_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Redis Configuration
REDIS_URL=redis://:CHANGE_THIS_PASSWORD@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_PASSWORD
REDIS_ENABLED=true

# Authentication & Security
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_64_CHAR_SECRET_KEY_FOR_PRODUCTION_USE_ONLY
SECURITY_SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_64_CHAR_SESSION_SECRET_FOR_PRODUCTION

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=/app/logs

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
MONITORING_TOKEN=CHANGE_THIS_MONITORING_SECRET

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS Configuration (if applicable)
SSL_CERT_PATH=/etc/ssl/certs/survey-app.crt
SSL_KEY_PATH=/etc/ssl/private/survey-app.key

# External Services (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEWRELIC_LICENSE_KEY=your-newrelic-license-key

# Container Registry (for CI/CD)
CONTAINER_REGISTRY=your-registry.com
REGISTRY_USERNAME=your-username
REGISTRY_PASSWORD=your-password

# Deployment Configuration
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_ADMIN_PASSWORD

# Database Credentials (separate for security)
POSTGRES_USER=survey_user
POSTGRES_PASSWORD=CHANGE_THIS_POSTGRES_PASSWORD
POSTGRES_DB=survey_production_db